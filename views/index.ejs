      </tr>
    </thead>
    <tbody>
      <% results.forEach((prod)=> { %>
      <tr>
        <td> <%= prod.id %></td>
        <td> <%= prod.codigo %></td>
        <td> <%= prod.descripcion %></td>
        <td><b class="">&#8353;</b> <%= prod.precio %></td>
        <td>
         <a href="/edit/<%= prod.id %>">edit</a>
         <a onclick="confirmar('<%= prod.id %>')"><i class="fa-solid fa-trash-can"></i></a>
        </td>
      </tr>
    <% }) %>

