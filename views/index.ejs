      function confirmar(id){
        Swal.fire({
  title: 'Eliminar?',
  // showDenyButton: true,
  showCancelButton: true,
  confirmButtonText: 'Si',
  // denyButtonText: `Don't save`,
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire('eliminado!', '', 'success')
    window.location='/delete/'+id;
  } 
  // else if (result.isDenied) {
